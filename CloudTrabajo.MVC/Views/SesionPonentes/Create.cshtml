@model CloudTrabajoBimestral.Models.SesionPonente

@{
    ViewData["Title"] = "Create";
}

<h1>Asignar Ponente a Sesión</h1>

<h4>SesionPonente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly value="0" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SesionId" class="control-label"></label>
                <select asp-for="SesionId" asp-items="@ViewBag.ListaSesiones" class="form-select">
                    <option selected="selected" value="">-- Elija una Sesión --</option>
                </select>
                <span asp-validation-for="SesionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PonenteId" class="control-label"></label>
                <select asp-for="PonenteId" asp-items="@ViewBag.ListaPonentes" class="form-select">
                    <option selected="selected" value="">-- Elija un Ponente --</option>
                </select>
                <span asp-validation-for="PonenteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Asignar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}