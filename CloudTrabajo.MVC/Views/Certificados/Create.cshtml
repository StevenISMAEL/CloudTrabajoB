@model CloudTrabajoBimestral.Models.Certificado

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar Certificado</h1>

<h4>Certificado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly value="0" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaEmision" class="control-label"></label>
                <input asp-for="fechaEmision" class="form-control"  value="@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm:ssZ")" />
                <span asp-validation-for="fechaEmision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlDescarga" class="control-label"></label>
                <input asp-for="UrlDescarga" class="form-control" placeholder="Ejemplo: https://tu-dominio.com/certificados/123.pdf" />
                <span asp-validation-for="UrlDescarga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscripcionID" class="control-label"></label>
                <select asp-for="InscripcionID" asp-items="@ViewBag.ListaInscripciones" class="form-select">
                    <option selected="selected" value="">-- Elija una Inscripción --</option>
                </select>
                <span asp-validation-for="InscripcionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}